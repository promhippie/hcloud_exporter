image: promhippie/hcloud-exporter:{{#if build.tag}}{{trimPrefix build.tag "v"}}{{else}}latest{{/if}}
{{#if build.tags}}
tags:
{{#each build.tags}}
  - {{this}}
{{/each}}
{{/if}}
manifests:
  -
    image: promhippie/hcloud-exporter:{{#if build.tag}}{{trimPrefix build.tag "v"}}-{{/if}}linux-amd64
    platform:
      architecture: amd64
      os: linux
  -
    image: promhippie/hcloud-exporter:{{#if build.tag}}{{trimPrefix build.tag "v"}}-{{/if}}linux-i386
    platform:
      architecture: 386
      os: linux
  -
    image: promhippie/hcloud-exporter:{{#if build.tag}}{{trimPrefix build.tag "v"}}-{{/if}}linux-arm64v8
    platform:
      architecture: arm64
      variant: v8
      os: linux
  -
    image: promhippie/hcloud-exporter:{{#if build.tag}}{{trimPrefix build.tag "v"}}-{{/if}}linux-arm32v7
    platform:
      architecture: arm
      variant: v7
      os: linux
  -
    image: promhippie/hcloud-exporter:{{#if build.tag}}{{trimPrefix build.tag "v"}}-{{/if}}linux-arm32v6
    platform:
      architecture: arm
      variant: v6
      os: linux
